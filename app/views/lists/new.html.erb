<!--ビュー：ページの「見た目」を作るためのファイル-->

<h1>新規投稿</h1>

<!-- form_with部分 -->
<%= form_with model: @list, url: '/lists', method: :post do |f| %>   <!--f：ブロック変数-->

  <h4>タイトル</h4>
  <%= f.text_field :title %>   <!--タイトルを入力する部分-->

  <h4>本文</h4>
  <%= f.text_area :body %>  <!--本文を入力する部分-->

  <%= f.submit '投稿' %>  <!--ボタン-->
<% end %>